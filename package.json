{
  "name": "c3po",
  "version": "1.0.0",
  "description": "The c3po converts OpenAPI schema to W3C WoT Thing Descriptions",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "build": "tsc",
    "commit": "git-cz",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {
    "@node-wot/binding-coap": "^0.7.8",
    "@node-wot/binding-http": "./libs/binding-http",
    "@node-wot/core": "^0.7.8",
    "axios": "^0.25.0",
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.13.1",
    "ioredis": "^4.28.3",
    "openapi-schema-validator": "^9.3.0",
    "pino": "^6.13.2",
    "pino-multi-stream": "^6.0.0",
    "pino-pretty": "^7.0.0",
    "pino-tee": "^0.3.0",
    "require-dir": "^1.2.0",
    "stream": "^0.0.2",
    "swagger-ui-express": "^4.1.6",
    "valid-url": "^1.0.9"
  },
  "author": {
    "name": "Ivan Zyrianoff",
    "email": "ivandimitry.ribeiro@unibo.it"
  },
  "contributors": [
    "Luca Cotugno - luca.cotugno@studio.unibo.it"
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/multer": "^1.4.7",
    "@types/swagger-ui-express": "^4.1.3",
    "commitizen": "^3.0.0",
    "cz-conventional-changelog": "^3.0.1",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "supertest": "^6.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
